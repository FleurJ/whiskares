<h1>Animals#edit</h1>

  <%= simple_form_for @animal, url: animal_path, method: :patch do |f| %>
    <h2>Create Animal</h2>
    <%= f.input :name, label: "Name:" %>
    <%= f.input :species, label: "Species:" %>
    <%= f.input :dangerosity, label: "Dangerosity:" %>
    <%= f.input :needs, label: "Needs:" %>

    <button type="button" class="btn btn-outline-primary">
      <%= f.button :submit, value: 'Create', "data-disable-with" => "Creating.." %>
    </button>
  <% end %>
