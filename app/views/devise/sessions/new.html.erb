<div class="container">
  <h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group col-md-4">
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, class:"form-control form-control-sm", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, class:"form-control form-control-sm", autocomplete: "current-password" %>
    </div>
    <br>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  </div>

  <div class="col-12">
    <div class="actions">
      <%= f.submit "Log in", class:"btn btn-login w-25 p-2" %>
    </div>
    <br>
    <% end %>
  </div>
<div class="col-12">
  <%= render "devise/shared/links" %>
</div>
</div>

